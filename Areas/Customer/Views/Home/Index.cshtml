@model IEnumerable<Product>


<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" style="width: 100%; height: 350px; object-fit: cover;" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                                <p class="card-title text-warning text-center">@product.ListPrice</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">List price: <span class="text-decoration-line-through">@product.Price50.ToString("c")</span> </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center"><span>@product.Price50.ToString("c")</span> </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" 
                            asp-route-productId="@product.Id"
                            class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    }
</div>